<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/light_blue"
    tools:context=".House">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/light_blue"
        android:orientation="vertical">

        <TableRow
            android:id="@+id/house_row1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/house1_name"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:gravity="center_vertical|center|center_horizontal"
                android:text="@string/house1_name"
                android:textColor="#673AB7"
                android:textIsSelectable="false"
                android:textSize="18sp" />
        </TableRow>

        <TableRow
            android:id="@+id/house_row2"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <EditText
                android:id="@+id/house1_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:importantForAutofill="no"
                android:inputType="textPersonName"
                android:text="@string/house1_description"
                android:textSize="14sp" />
        </TableRow>

        <TableRow
            android:id="@+id/house_row3"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/house1_members_list_title"
                android:layout_width="74dp"
                android:layout_height="wrap_content"
                android:text="@string/house1_members_title"
                android:textColor="#673AB7" />

            <TextView
                android:id="@+id/house1_members_list"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/house1_members_list" />

        </TableRow>

        <TableRow
            android:id="@+id/house_row4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/light_blue">

            <TextView
                android:id="@+id/house1_task1_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/house1_task1_title"
                android:textColor="#673AB7" />

            <TextView
                android:id="@+id/house1_task1_name"
                android:layout_width="363dp"
                android:layout_height="match_parent"
                android:lines="1"
                android:maxLines="1"
                android:text="@string/house1_task1_name" />

        </TableRow>

        <TableRow
            android:id="@+id/house_row5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/light_blue">

            <TextView
                android:id="@+id/house1_task2_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/house1_task2_title"
                android:textColor="#673AB7" />

            <TextView
                android:id="@+id/house1_task2_name"
                android:layout_width="369dp"
                android:layout_height="match_parent"
                android:lines="1"
                android:maxLines="1"
                android:text="@string/house1_task2_name" />

        </TableRow>

        <TableRow
            android:id="@+id/house_row6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/light_blue">

            <TextView
                android:id="@+id/house1_task3_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/house1_task3_title"
                android:textColor="#673AB7" />

            <TextView
                android:id="@+id/house1_task3_name"
                android:layout_width="361dp"
                android:layout_height="match_parent"
                android:lines="1"
                android:maxLines="1"
                android:text="@string/house1_task3_name" />

        </TableRow>

        <TableRow
            android:id="@+id/house_row7"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/view_house_button"
                android:onClick="viewHouseButtonClick"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="100dp"
                android:text="@string/view_house_button" />

            <Button
                android:id="@+id/house1_leave_house_button"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/leave_house"
                android:layout_marginEnd="15dp"/>

        </TableRow>

        <TextView
            android:id="@+id/spacer2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white" />

    </LinearLayout>

</FrameLayout>