<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            tools:ignore="MissingConstraints">

            <TextView
                android:id="@+id/due_today_title"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:background="@android:color/holo_red_dark"
                android:text="@string/due_today_title" />
            <LinearLayout
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/house3_task2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="200"
                    android:text="@string/house1_task3_title" />

                <TextView
                    android:id="@+id/house3_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="200"
                    android:text="@string/house1_name" />
                <TextView
                    android:id="@+id/due_date1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="200"
                    android:text="@string/due_date_1" />
            </LinearLayout>

            <LinearLayout
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/house1_task4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="200"
                    android:text="@string/house2_task3_title" />

                <TextView
                    android:id="@+id/house1_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="200"
                    android:text="@string/house2_name" />
                <TextView
                    android:id="@+id/due_date3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="200"
                    android:text="@string/due_date_1" />
            </LinearLayout>

            <LinearLayout
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/house2_task4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="200"
                    android:text="@string/house1_task1_title" />

                <TextView
                    android:id="@+id/house2_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="200"
                    android:text="@string/house1_name" />
                <TextView
                    android:id="@+id/due_date2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="200"
                    android:text="@string/due_date_1" />
            </LinearLayout>


            <TextView
                android:id="@+id/due_this_week_title"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:background="@android:color/holo_orange_light"
                android:text="@string/due_this_week_title" />


            <LinearLayout
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="200"
                    android:text="@string/house1_task2_title" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="200"
                    android:text="@string/house1_name" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="200"
                    android:text="@string/due_date_2" />
            </LinearLayout>
            <TextView
                android:id="@+id/due_this_month_title"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:background="@color/yellow"
                android:text="@string/due_this_month_title" />

            <LinearLayout
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="200"
                    android:text="@string/house1_task2_title" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="200"
                    android:text="@string/house1_name" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="200"
                    android:text="@string/due_date_3" />
            </LinearLayout>

            <LinearLayout
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="200"
                    android:text="@string/house2_task1_title" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="200"
                    android:text="@string/house3_name" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="200"
                    android:text="@string/due_date_3" />
            </LinearLayout>

            <TextView
                android:id="@+id/due_later_title"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:background="@android:color/holo_green_light"
                android:text="@string/due_later_title" />

            <LinearLayout
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="200"
                    android:text="@string/house1_task3_title" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="200"
                    android:text="@string/house3_name" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="200"
                    android:text="-" />
            </LinearLayout>



        </LinearLayout>
\</androidx.constraintlayout.widget.ConstraintLayout>

