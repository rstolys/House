                android:layout_height="35dp"
                android:background="@android:color/holo_blue_bright"
                android:text="@string/house1_title" />

            <TextView
                android:id="@+id/house1_task1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/house1_task1" />

            <TextView
                android:id="@+id/house1_task2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/house1_task2" />

            <TextView
                android:id="@+id/house1_task3"
