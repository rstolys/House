                android:text="@string/house2_title" />

            <TextView
                android:id="@+id/house2_task1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/house2_task1" />

            <TextView
                android:id="@+id/house2_task2"
                android:layout_width="match_parent"
